<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="@color/orangeGradientStart" />
      <stroke
          android:width="1dp"
          android:color="@color/orangeGradientEnd" />
      <corners
          android:radius="@dimen/buttonCornerRadius" />
      <padding
          android:left="@dimen/buttonPadding"
          android:top="@dimen/buttonPadding"
          android:right="@dimen/buttonPadding"
          android:bottom="@dimen/buttonPadding" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="@color/orangeGradientStart"
          android:endColor="@color/orangeGradientEnd"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="@color/orangeGradientEnd" />
      <corners
          android:radius="@dimen/buttonCornerRadius" />
      <padding
          android:left="@dimen/buttonPadding"
          android:top="@dimen/buttonPadding"
          android:right="@dimen/buttonPadding"
          android:bottom="@dimen/buttonPadding" />
    </shape>
  </item>
</selector>
